<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="css/paquetes.css">
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>
    <main>
        
            <h2>CREAR PAQUETE</h2>

            <% if (locals.errors) { 
                errors.forEach(error => { %>
                <p class="feedback is-danger"><%= error.msg %></p>
                <% }) 
             }
                %>

        <form action="/crear" method="POST" enctype="multipart/form-data"> 

    <div class="field">
            <label for="">Titulo</label>
        <div>
            <input type="text" name="title" value="<%= locals.old && old.title ? old.title : ''%>">
        </div>
    </div>

    <div class="field">
            <label for="image">Imagen</label>
            <div>
            <input type="file" name="image" id="image" value="<%= locals.old && old.image ? old.image : ''%>">
        </div>
    </div>   

     <div class="field">
            <label for="">Descripci√≥n</label>
            <div>
            <input type="text" name="description" value="<%= locals.description && old.description ? old.description : ''%>">
            </div>
    </div>

    <div class="field">
            <label for="">Precio</label>
            <div>
            <input type="text" name="price" value="<%= locals.old && old.price ? old.price : ''%>">
        </div>
    </div>

        <div>
     <!--  <div class="field">
         <div class="control">
             <input type="submit" value="Crear paquete">
                </div>
            </div> --> 

           <div class="button">
            <button class= btn sm btn-pink-outline>
               <input type="submit">
            </button>
        </div>

            </form>
           


</main>

    <footer>
        <%- include('../partials/footer.ejs') %>
</footer>
</body>
</html>
