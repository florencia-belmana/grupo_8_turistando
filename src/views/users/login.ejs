<body>
    <div class="container">
    <section>
    <!-- login div -->
    <div class="login">
    <!-- login header -->
    
    <h1 id="header">Ingresá con tu email y contraseña</h1>
    <form id="form" action="/login" method="POST">
       <!--antes estaba nombreUsuario y toda su categoria-->
