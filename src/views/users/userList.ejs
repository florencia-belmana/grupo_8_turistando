<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/header.ejs') %>


<main>
    <div class="container">
        <h1>Lista Usuarios</h1>

        <% users.forEach(user => { %>
            <article class="card">
                <div class="card-left">
                    <figure>
                        
                        <img width="15%" src="images/users/<%= user.image%>" alt="">
                    </figure>
                    <h3>#<%= user.id %></h3>
                </div>
                <div class="card-content">
                    <h3><%= user.first_name %> <%= user.last_name %></h3>
                    <p>Categor√≠a: <%= user.category %></p>
                    <p>Email: <a href="mailto:<%= user.email %>" target="_blank"><%= user.email %></a></p>
                    <div>
                        <button class="button is-danger" ><a href="/userList/<%= user.id %>">Ver detalle</button></a>
                    </div>
                </div>   
            </article>
        <% }) %>

    </div>
</main>

<footer>
    <%- include('../partials/footer.ejs') %>
</footer>
</body>
</html>